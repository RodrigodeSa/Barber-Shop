<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/midnightblue"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_baber_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/barber_shop_text"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/cl_login"
            app:layout_constraintStart_toStartOf="@+id/cl_login"
            app:layout_constraintTop_toTopOf="@+id/cl_login" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/logobarber1"
            app:layout_constraintEnd_toEndOf="@+id/cl_login"
            app:layout_constraintStart_toStartOf="@+id/cl_login"
            app:layout_constraintTop_toBottomOf="@id/tv_baber_shop"
            android:importantForAccessibility="no" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/name_text"
            android:inputType="text"
            android:maxLines="1"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="@+id/cl_login"
            app:layout_constraintStart_toStartOf="@+id/cl_login"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/password_text"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="@+id/cl_login"
            app:layout_constraintStart_toStartOf="@+id/cl_login"
            app:layout_constraintTop_toBottomOf="@id/et_name"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@drawable/button"
            android:padding="18dp"
            android:text="@string/login_text"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/alizarin"
            app:layout_constraintEnd_toEndOf="@+id/et_password"
            app:layout_constraintStart_toStartOf="@+id/et_password"
            app:layout_constraintTop_toBottomOf="@id/et_password" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>